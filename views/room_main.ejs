<body STYLE="background-color: #E6E6FA  ;">
<HR>
<% if ( expressFlash.length > 0 ) { %>
  <p STYLE="margin-left: 50px;color: green;" >     <%= expressFlash %> </p>
<% } %>


<div class="container">
    <div class="row clearfix">
        <div class="col-md-8 column">
            <h4>
                Welcome to Room <h3><%=room.room_name%></h3>
            </h4>
            <img alt="140x140" src="http://lorempixel.com/140/140/" class="img-circle">
        </div>
        <div class="col-md-4 column">
        <FORM ACTION="/logout">
             <button  type="submit" class="btn btn-primary btn-xs" >Logout</button>
             </FORM>
             <BR><BR><BR>
            <div class="btn-group btn-group-sm">
                 <button class="btn btn-default" type="button"><em class="glyphicon glyphicon-align-left"></em> Edit Room</button>
                 <button class="btn btn-default" type="button"><em class="glyphicon glyphicon-align-center"></em> Edit Admin</button> <button class="btn btn-default" type="button"><em class="glyphicon glyphicon-align-right"></em> Edit DP</button> <button class="btn btn-default" type="button"><em class="glyphicon glyphicon-align-justify"></em></button>
                 
            </div>
            <BR><BR>
            <table class="table">
                <thead>
                    <tr>
                         <th>
                           Member Name
                        </th>
                        <th>
                            Member email
                        </th>
                        <th>
                            Member Mobile
                        </th>
                        
                    </tr>
                </thead>
                
                <tbody>
               
                    <%room.room_members.forEach(function(roommember){ %>
                    <tr class="active">
                    
                        
                        <td><%=roommember.member_name %></td>
                        <td><%=roommember.member_email %></td>
                        <td><%=roommember.member_mobile %></td>
                        <td><a href="/<%=roommember._id%>/editmember" >edit</a>|<a href="/<%=roommember._id%>/deletemember">delete</a></td>
                    </tr>
                    <% }) %>
                          
                  </tbody>
            </table>
             <a id="modal-60579" href="#modal-container-60579" role="button" class="btn" data-toggle="modal">Add Members+..</a>
            
            <div class="modal fade" id="modal-container-60579" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                             <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                            <h4 class="modal-title" id="myModalLabel">
                                Member Details
                            </h4>
                        </div>
                        <div class="modal-body">
                          <form ACTION="/<%=room._id%>/addmember"  METHOD="post">
           <div >
            
                 <input type="text"  name="member[name]" class="form-control" placeholder="member name"  REQUIRED="required"/>
                    <BR>     
                 <input type="email"   name="member[email]" class="form-control" placeholder="member Email"   REQUIRED="required"/>
                 <BR>
                 <input type="number"   name="member[mobile]" class="form-control" placeholder="member Mobile"  REQUIRED="required" />
                 <BR> <BR>   
                <button type="submit"  class="btn btn-primary" >ADD</button>
        </div>
        </form>
                        </div>
                        <div class="modal-footer">
                             <button type="button" class="btn btn-default" data-dismiss="modal">Close</button> 
                            </div>
                    </div>
                   </div>
                
            </div>
            
        </div>
    </div>
</div>

</body>
</html>
