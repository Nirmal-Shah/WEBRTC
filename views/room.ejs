<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
<link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery.js"></script>
 <script src="/bootstrap/js/bootstrap.js"></script>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<BODY>
<a HREF="/logout"  >logout</a>

    <h1> hello <%=room.room_name%></h1>
    <table class="table" style="background-color:white;">
<caption>Table OutPut</caption>
<thead>
<tr>
    <th>Room name</th>
    <th>Admin email</th>
    <th>Admin mobile</th>
    <th>Room Key</th>
    <th>Room members</th>
    <th>Edit info</th>
    <th>ADD</th>
   </tr>
</thead>
<tbody > 
<TR>
<TD><%=room.room_name%></TD>
<TD><%=room.room_admin_email%></TD>
<TD><%=room.room_admin_mobile%></TD>
<TD><%=room.room_key%></TD>
<TD>
   <% room.room_members.forEach(function(roommember){ %>
    <ul class="list-group">
  <li class="list-group-item"> <%=roommember.member_name %> <p>MOBILE::</p> <%=roommember.member_mobile %>  </li>
  </ul>
 <% }) %>
 </TD>
<TD><a  href= "/#{ <%=room._id%>}/edit" data-toggle="modal" data-target="#myModalEdit">edit</a>

</TD>
<TD><a  href= "/<%=room._id%>/addmember" data-toggle="modal" data-target="#memberModal">Add Members</a></TD>
</TR>
</tbody>
  </table>         


<div class="modal fade" id="myModalEdit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        
        <form  action= "/<%=room._id%>/edit"  method="post">
             <div class="input-group input-group-lg">
                  <label>Room Name</label>
                 <input type="text" id="_room"  name="room[name]" class="form-control" placeholder="Roomname"  VALUE= "<%=room.room_name %>" />
                 <label>Room Key</label>
                 <input type="password"  id="pwd"  name="room[key]"  class="form-control" placeholder="Roomkey" VALUE="<%=room.room_key %>" />
                <label>Email</label>
                 <input type="text"   id="email" name="room[email]" class="form-control" placeholder="Email"  VALUE="<%=room.room_admin_email %>" />
                 <label>Mobile No</label>
                 <input type="text"   id="mobile" name="room[mobile]" class="form-control" placeholder="Mobno"  VALUE="<%=room.room_admin_mobile %>" />
                 <button type="submit" class="btn btn-primary" >Save Changes</button>
             </div>
       </form>
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>






<div class="modal fade" id="memberModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        <form ACTION="/<%=room._id%>/addmember"  METHOD="post">
           <div class="input-group input-group-lg">
           <label>MemberName</label>
                 <input type="text"  name="member[name]" class="form-control" placeholder="Roomname" />
                 <label>Email</label>
                 <input type="text"   name="member[email]" class="form-control" placeholder="Email"  />
                 <label>Mobile No</label>
               <input type="text"   name="member[mobile]" class="form-control" placeholder="Mobno"  />    
                <button type="submit"  class="btn btn-primary" >ADD</button>
        </div>
        </form>
   </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


</BODY>
 


</html>